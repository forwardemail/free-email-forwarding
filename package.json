{
  "name": "forward-email",
  "description": "ForwardEmail is a free, encrypted, and open-source email forwarding service for custom domains at http://forwardemail.net",
  "version": "0.0.1",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "ava": {
    "verbose": true,
    "failFast": true,
    "serial": true
  },
  "bugs": {
    "url": "https://github.com/niftylettuce/forward-email/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "bluebird": "^3.5.2",
    "bytes": "^3.0.0",
    "common-tags": "^1.8.0",
    "disposable-email-domains": "^1.0.39",
    "dkim": "^0.4.4",
    "dmarc-parse": "^1.0.2",
    "dnsbl": "^3.1.1",
    "get-port": "^4.0.0",
    "lodash": "^4.17.11",
    "mailin": "^3.0.4",
    "mailparser": "^2.4.0",
    "ms": "^2.1.1",
    "nodemailer": "4.6.8",
    "parse-domain": "^2.1.6",
    "punycode": "^2.1.1",
    "ratelimiter": "^3.2.0",
    "redis": "^2.8.0",
    "smtp-server": "3.4.7",
    "underscore.string": "^3.3.5",
    "validator": "^10.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "auto-bind": "^1.2.1",
    "ava": "latest",
    "codecov": "latest",
    "cross-env": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-config-xo-lass": "latest",
    "eslint-plugin-prettier": "latest",
    "fixpack": "latest",
    "husky": "latest",
    "is-ci": "^1.2.1",
    "lint-staged": "latest",
    "nyc": "latest",
    "prettier": "latest",
    "redis-mock": "^0.37.0",
    "remark-cli": "latest",
    "remark-preset-github": "latest",
    "shelljs": "^0.8.2",
    "uuid": "^3.3.2",
    "xo": "latest"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "http://forwardemail.net",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "e-mail",
    "email",
    "forward",
    "forwarding",
    "free",
    "mail",
    "mailer",
    "nodemailer",
    "open",
    "private",
    "proxy",
    "service",
    "smtp",
    "source"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "xo --fix",
        "git add"
      ],
      "*.md": [
        "remark . -qfo",
        "git add"
      ],
      "package.json": [
        "fixpack",
        "git add"
      ]
    }
  },
  "main": "index.js",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niftylettuce/forward-email"
  },
  "scripts": {
    "ava": "cross-env NODE_ENV=test ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "nyc": "cross-env NODE_ENV=test nyc ava",
    "test": "npm run lint && npm run ava",
    "test-coverage": "npm run lint && npm run nyc"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "ignores": [
      "config.js"
    ],
    "rules": {
      "no-use-extend-native/no-use-extend-native": "off"
    }
  }
}
