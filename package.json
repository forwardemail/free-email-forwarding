{
  "name": "forward-email",
  "description": "ForwardEmail is a free, encrypted, and open-source email forwarding service at http://forwardemail.net",
  "version": "0.0.1",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "bugs": {
    "url": "https://github.com/niftylettuce/forward-email/issues",
    "email": "niftylettuce@gmail.com"
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "bluebird": "^3.5.1",
    "bytes": "^3.0.0",
    "disposable-email-domains": "^1.0.34",
    "dkim": "^0.4.1",
    "email-providers": "^0.30.0",
    "get-port": "^3.2.0",
    "lodash": "^4.17.10",
    "mailin": "^3.0.4",
    "mailparser": "^2.2.0",
    "ms": "^2.1.1",
    "nodemailer": "4.1.1",
    "parse-domain": "^2.1.2",
    "ratelimiter": "^3.1.0",
    "redis": "^2.8.0",
    "smtp-server": "3.2.0",
    "validator": "^10.4.0"
  },
  "ava": {
    "verbose": true,
    "failFast": true,
    "serial": true
  },
  "devDependencies": {
    "auto-bind": "^1.2.1",
    "ava": "^0.25.0",
    "codecov": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.1",
    "husky": "^0.14.3",
    "nyc": "^12.0.2",
    "prettier": "^1.13.7",
    "remark-cli": "^5.0.0",
    "remark-preset-github": "^0.0.8",
    "shelljs": "^0.8.2",
    "uuid": "^3.3.2",
    "xo": "^0.21.1"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "http://forwardemail.net",
  "keywords": [
    "forward",
    "email",
    "forwarding",
    "e-mail",
    "mail",
    "nodemailer",
    "mailer",
    "smtp",
    "proxy",
    "service",
    "free",
    "open",
    "source",
    "private"
  ],
  "license": "MIT",
  "main": "index.js",
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niftylettuce/forward-email"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo",
    "precommit": "npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true,
    "ignores": [
      "config.js"
    ]
  }
}
