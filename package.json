{
  "name": "forward-email",
  "description": "ForwardEmail is a free, encrypted, and open-source email forwarding service for custom domains at http://forwardemail.net",
  "version": "2.1.3",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "ava": {
    "verbose": true,
    "helpers": [
      "test/helpers/**/*"
    ]
  },
  "bugs": {
    "url": "https://github.com/niftylettuce/forward-email/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "array-join-conjunction": "^1.0.0",
    "bluebird": "^3.5.5",
    "bytes": "^3.1.0",
    "cabin": "^5.0.8",
    "common-tags": "^1.8.0",
    "disposable-email-domains": "^1.0.48",
    "dkim": "^0.7.0",
    "dmarc-parse": "^1.0.2",
    "dnsbl": "^3.1.1",
    "get-fqdn": "^0.0.4",
    "get-port": "^5.0.0",
    "ip": "^1.1.5",
    "is-string-and-not-blank": "^0.0.2",
    "lodash": "^4.17.15",
    "mailin": "^3.0.4",
    "mailsplit": "^4.4.1",
    "ms": "^2.1.2",
    "nodemailer": "6.3.0",
    "parse-domain": "^2.3.2",
    "punycode": "^2.1.1",
    "python-dkim-verify": "^0.0.1",
    "python-spfcheck2": "^0.0.3",
    "ratelimiter": "^3.3.1",
    "redis": "^2.8.0",
    "signale": "^1.4.0",
    "smtp-server": "3.5.0",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "auto-bind": "^2.1.0",
    "ava": "^2.4.0",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "eslint-config-xo-lass": "^1.0.3",
    "fixpack": "^2.3.1",
    "husky": "^3.0.5",
    "is-ci": "^2.0.0",
    "lint-staged": "^9.3.0",
    "nyc": "^14.1.1",
    "remark-cli": "^7.0.0",
    "remark-preset-github": "^0.0.16",
    "shelljs": "^0.8.3",
    "uuid": "^3.3.3",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "http://forwardemail.net",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "e-mail",
    "email",
    "forward",
    "forwarding",
    "free",
    "mail",
    "mailer",
    "nodemailer",
    "open",
    "private",
    "proxy",
    "service",
    "smtp",
    "source"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ],
    "package.json": [
      "fixpack",
      "git add"
    ]
  },
  "main": "index.js",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niftylettuce/forward-email"
  },
  "scripts": {
    "ava": "cross-env NODE_ENV=test ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "nyc": "cross-env NODE_ENV=test nyc ava",
    "test": "npm run lint && npm run ava",
    "test-coverage": "npm run lint && npm run nyc"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "ignores": [
      "config.js"
    ],
    "rules": {
      "no-use-extend-native/no-use-extend-native": "off"
    }
  }
}
