{
  "name": "forward-email",
  "description": "Forward Email is the best free email forwarding for custom domains at http://forwardemail.net",
  "version": "8.1.0",
  "author": "Niftylettuce, LLC. <niftylettuce@gmail.com> (https://niftylettuce.com/)",
  "ava": {
    "serial": true,
    "failFast": true,
    "verbose": true,
    "files": [
      "test/**/*",
      "!test/helpers"
    ],
    "timeout": "10s"
  },
  "bugs": {
    "url": "https://github.com/niftylettuce/forward-email/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "@ladjs/env": "^3.0.0",
    "@ladjs/graceful": "^1.0.5",
    "@ladjs/proxy": "^2.0.3",
    "@ladjs/redis": "^1.0.7",
    "@ladjs/shared-config": "^5.0.1",
    "@slack/web-api": "^6.4.0",
    "array-join-conjunction": "^1.0.0",
    "axe": "^8.0.0",
    "boolean": "^3.1.4",
    "bytes": "^3.1.0",
    "common-tags": "^1.8.0",
    "dnsbl": "^3.2.0",
    "fast-safe-stringify": "^2.0.8",
    "get-fqdn": "^0.0.4",
    "get-port": "^5.1.1",
    "get-stream": "^6.0.1",
    "iconv": "^3.0.0",
    "ip": "^1.1.5",
    "is-fqdn": "^2.0.1",
    "is-string-and-not-blank": "^0.0.2",
    "lodash": "^4.17.21",
    "mailauth": "^2.1.3",
    "mailparser": "^3.3.0",
    "mailsplit": "^5.0.1",
    "ms": "^2.1.3",
    "mx-connect": "^1.2.0",
    "nodemailer": "^6.6.3",
    "pify": "^5.0.0",
    "pino": "^6.13.0",
    "punycode": "^2.1.1",
    "ratelimiter": "^3.4.1",
    "re2": "^1.16.0",
    "rev-hash": "^3.0.0",
    "sender-rewriting-scheme": "^1.0.0",
    "signale": "^1.4.0",
    "smtp-server": "^3.9.0",
    "spamscanner": "^3.0.7",
    "split-lines": "2",
    "superagent": "^6.1.0",
    "titleize": "2",
    "uuid-by-string": "^3.0.4",
    "validator": "^13.6.0",
    "zone-mta": "^3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "ava": "^3.15.0",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-xo-lass": "^1.0.5",
    "fixpack": "^4.0.0",
    "husky": "^7.0.1",
    "ioredis": "^4.27.8",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.2",
    "nyc": "^15.1.0",
    "remark-cli": "^10.0.0",
    "remark-preset-github": "^4.0.1",
    "uuid": "^8.3.2",
    "xo": "0.39"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "helpers/**/*",
    ".env.defaults",
    ".env.schema",
    "index.js",
    "app.js",
    "proxy.js",
    "ecosystem.json"
  ],
  "homepage": "http://forwardemail.net",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "e-mail",
    "email",
    "forward",
    "forwarding",
    "free",
    "mail",
    "mailer",
    "nodemailer",
    "open",
    "private",
    "proxy",
    "service",
    "smtp",
    "source"
  ],
  "license": "Business Source License 1.1",
  "main": "index.js",
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none"
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niftylettuce/forward-email"
  },
  "scripts": {
    "ava": "cross-env IS_NOT_SECURE=true NODE_ENV=test ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && remark . -qfo",
    "nyc": "cross-env IS_NOT_SECURE=true NODE_ENV=test nyc ava",
    "test": "npm run lint && npm run ava",
    "test-coverage": "npm run lint && npm run nyc"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "extends": [
      "xo-lass"
    ],
    "ignores": [
      "config.js"
    ],
    "rules": {
      "no-use-extend-native/no-use-extend-native": "off",
      "unicorn/prevent-abbreviations": "off",
      "import/extensions": "off"
    }
  }
}
